{% set year = 0 %}
{% for post in data.posts %}
{%     if post.date | date("Y") != year %}
{%         set year = post.date | date("Y") %}

        <h2 id="{{ year }}"><a href="#{{ year }}"></a>{{ year }}</h2>
{%     endif %}

        <article>
            <h4><a href=".{{ post.url | replace({'.html':''}) }}">{{ post.title }}</a></h4>
            <time>{{ post.date | date("Y-m-d") }}</time>
            <p>{{ post.blocks.content|raw|striptags|replace({"\n":' ', "\r":' '})|trim|split(' ')|slice(0,50)|join(' ')|raw }}…</p>
            <a href=".{{ post.url | replace({'.html':''}) }}"><em>Read more</em></a>
        </article>
{% endfor %}
